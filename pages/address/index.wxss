.index {
  min-height: 100vh;
  background: #f7f7f7;
}
.index-addres-header {
  padding: 16rpx;
}
.address-fast {
  width: 100%;
  background: #fff;
  padding: 20rpx 10rpx 0;
  border: 1px solid #efefef;
}
.address-fast-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}
.address-fast-select {
  font-size: 24rpx;
  color: #010101;
}
.address-fast-ft {
  display: flex;
  align-items: center;
  color: #C3C3C3;
  font-size: 20rpx;
}
.address-fast-ft text {
  margin-right: 10rpx;
}
.address-fast-body {
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.address-tag {
  width: 28%;
  padding: 10rpx;
  text-align: center;
  color: #333;
  border-radius: 5rpx;
  border: 1px solid #efefef;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: keep-all;
  white-space: normal;
  background: #fff;
}
.address-location {
  margin-top: 20rpx;
}
.address-location-body {
  display: flex;
  flex-wrap: wrap;
}
.address-location-title {
  font-size: 24rpx;
  color: #999999;
}
.address-location-body {
  margin-top: 20rpx;
}
.address-location-hot {
  border-bottom: 1px solid #efefef;
}
.address-select {
  margin-top: 20rpx;
}
.address-select-title {
  padding: 0 16rpx;
  font-size: 24rpx;
  color: #999999;
}
.address-select-body {
  margin-top: 20rpx;
}
.address-select-item {
  padding: 20rpx 0 20rpx 16rpx;
  border-bottom: 1px solid #efefef;
  background: #fff;
}
.addres-quick {
  position: fixed;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
}
.addres-quick-item {
  text-align: center;
  padding: 2rpx 10rpx;
  background: #FCFCFC;
  color: #333;
  font-size: 20rpx;
}