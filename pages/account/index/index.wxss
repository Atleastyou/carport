@import "../../../styles/icon.wxss";
.index {
  min-height: 100vh;
  background: #F5F5F5;
}
.index-container {
  padding-bottom: 30rpx;
}
.user {
  position: relative;
  display: flex;
  align-items: center;
  padding: 43rpx 30rpx;
}
.user-head {
  width: 100rpx;
  height: 100rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.user-detail {
  margin-left: 30rpx;
}
.user-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #060606;
  line-height: 56rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  max-width: 400rpx;
  white-space: nowrap;
}
.user-job {
  margin-top: 6rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  line-height: 33rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  max-width: 400rpx;
  white-space: nowrap;
}
.index-vip {
  padding: 0 30rpx;
}
.index-vip-bd {
  padding: 40rpx 30rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
}
.vip-level {
  width: 100%;
  height: 107rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  background: linear-gradient(90deg, #F6F8FC 0%, #EDF1F8 100%);
  border-radius: 10rpx;
}
.vip-level.vip-level-company {
  background: linear-gradient(90deg, #FCFAF6 0%, #FFF1D8 100%);
}
.vip-level-bd {
  display: flex;
  align-items: center;
}
.vip-level-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #060606;
  line-height: 42rpx;
}
.vip-level-time {
  margin-left: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  line-height: 33rpx;
}
.vip-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #333333;
  border-radius: 5rpx;
}
.vip-btn-txt {
  font-size: 22rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 30rpx;
  background: #333333;
  padding: 0;
}
.vip-btn-txt:after {
  border: none;
}
.vip-btn-icon {
  margin-left: 10rpx;
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top-width: 10rpx;
  border-bottom-width: 10rpx;
  border-left-width: 12rpx;
  border-right-width: 12rpx;
  border-left-color: #fff;
}
.serve-title {
  padding: 40rpx 0;
  border-bottom: 1px solid #E8E8E8;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 45rpx;
}
.serve-bd {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 43rpx 0 49rpx;
}
.serve-item {
  text-align: center;
}
.serve-item-img {
  width: 84rpx;
  height: 84rpx;
}
.serve-item-title {
  margin-top: 13rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #333333;
  line-height: 24rpx;
}
.index-section {
  padding: 0 30rpx;
  margin-top: 30rpx;
}
.section-bd {
  width: 100%;
  padding: 10rpx 0;
  background: #FFFFFF;
  border-radius: 10rpx;
}
.section-bd:after {
  border: none;
}
.nav-item {
  padding: 25rpx 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.nav-item:after {
  border: none;
}
.nav-item-hd {
  display: flex;
  align-items: center;
  flex: 1;
}
.nav-item-hd .iconfont {
  margin-right: 20rpx;
  font-size: 30rpx;
  color: #333333;
}
.nav-item-title {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  line-height: 40rpx;
}
.nav-item-ft {
  display: flex;
  align-items: center;
}
.nav-item-ft-info {
  margin-right: 20rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 33rpx;
}
.user-bd {
  display: flex;
  align-items: center;
}
.user-account {
  justify-content: space-between;
}
.user-account-handle {
  display: flex;
  align-items: auto;
}
.user-account-handle .iconfont {
  font-size: 33rpx;
  color: #333333;
}
.user-account-handle text {
  margin-left: 20rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 33rpx;
}