.form {
  width: 100%;
  min-height: 100vh;
  background: #f5f5f5;
}
.form-body {
  padding: 20rpx 32rpx 20rpx 40rpx;
  background: #fff;
}
.form-item {
  padding: 30rpx 0;
  border-bottom: 1px solid #bbb;
  display: flex;
  align-items: center;
}
.form-item.form-item-pic {
  padding: 10rpx 0;
}
.form-item-head {
  flex: 1;
}
.form-item-head {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.form-item-bd {
  flex: 1;
  font-size: 24rpx;
}
.form-item-bd.text-right {
  text-align: right;
  padding-right: 10rpx;
}
.form-item-label {
  font-size: 24rpx;
  color: #101010;
}
.form-item-ft {
  display: flex;
  align-items: center;
}
.form-item-ft text {
  font-size: 24rpx;
  color: #8D8C8C;
  margin-right: 10rpx;
}