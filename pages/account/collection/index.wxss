.index {
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
}
.index-tabs {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
}
.tabs-bd {
  display: flex;
  align-items: center;
}
.tab-item {
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #101010;
}
.tab-item.active {
  color: #D93025;
}
.index-handle {
  font-size: 24rpx;
  color: #101010;
}
.index-body {
  padding-top: 10rpx;
}
.item {
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}
.item-img {
  width: 140rpx;
  height: 140rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.item-car-img {
  width: 160rpx;
  height: 160rpx;
  background-color: #FF4D57;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.item-bd {
  flex: 1;
  padding-left: 30rpx;
}
.item-name {
  font-size: 32rpx;
  color: #101010;
  font-weight: bold;
}
.item-car, .item-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.item-car-label, .item-price-label {
  font-size: 24rpx;
  color: #000;
}
.item-car-value, .item-price-value {
  font-size: 24rpx;
  color: #EC0D0D;
}
.item-price-value {
  font-weight: bold;
}
.padding {
  padding-bottom: 120rpx;
}
.item-floor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}
.item-floor-code {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #fff;
}
.car .item-car, .car .item-price {
  justify-content: end;
}
.car .item-car {
  color: #101010;
}
.car .item-price {
  font-size: 36rpx;
}
.car .item-car-value {
  color: #101010;
}
.car .item-price-label {
  color: #BF1A21;
}
.item-delete {
  width: 130rpx;
  height: 100%;
  background: #FF4D57;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
}
.index-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid rgba(0, 0, 0, 0.23);
}
.index-footer-btn {
  width: 220rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 80rpx;
  background-color: #EC0D0D;
  color: #fff;
  font-size: 28rpx;
}
.index-empty {
  padding-top: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.index-empty-icon {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #FFF0E6;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index-empty-icon .icon-car {
  color: #FF8452;
  font-size: 100rpx;
}
.index-empty-info {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #474747;
}