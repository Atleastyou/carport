.index {
  min-height: 100vh;
  background: #f5f5f5;
}
.index-header {
  height: 100rpx;
  width: 100%;
  padding: 0 50rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #efefef;
}
.index-header-search {
  width: 100%;
  height: 60rpx;
  border-radius: 30rpx;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.search-address {
  font-size: 24rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.icon-triangle {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #333;
}
