<view class="index">
  <view class="index-header">
    <view class="index-header-search">
      <view class="search-address" bindtap="selectAddress">
        <text>包头</text>
        <i class="iconfont icon-triangle"></i>
      </view>
      <view class="search-input" url="/pages/search/index" hover-class="none">
        <input type="text" placeholder="搜索楼盘"/>
      </view>
    </view>
  </view>
  <view class="index-swiper">
    <swiper indicator-dots autoplay easing-function="easeInOutCubic">
      <block wx:for="{{banners}}" wx:key="index">
        <swiper-item>
          <view class="swiper-banner" style="background-image: url({{item}});"></view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="index-content">
    <view class="content-header">
      <view class="content-header-title">热门楼盘</view>
      <view class="content-header-more">
        <view class="header-more-txt">查看更多</view>
        <view class="header-more-go">GO>></view>
      </view>
    </view>
    <view class="content-body">
      <view class="item-body" wx:for="{{10}}" wx:key="index">
        <view class="item-container">
          <view class="item-img" style="background-image: url(../../images/demo_picture.jpg);"></view>
        </view>
      </view>
    </view>
  </view>
</view>