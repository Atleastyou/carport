.index {
  min-height: 100vh;
  background: #f5f5f5;
}
.index-header {
  height: 100rpx;
  width: 100%;
  padding: 0 50rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #efefef;
  background-color: #f5f5f5;
}
.index-header-search {
  width: 100%;
  height: 60rpx;
  border-radius: 30rpx;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.search-address {
  padding-right: 20rpx;
  margin-right: 20rpx;
  border-right: 1px solid #efefef;
  font-size: 24rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.icon-triangle {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #333;
}
.search-input {
  flex: 1;
  font-size: 24rpx;
}
.index-dropdown {
  width: 100%;
}
.index-dropdown .van-dropdown-menu__item {
  justify-content: space-between;
}
.index-houses {
  padding-top: 20rpx;
}
.house-item {
  width: 100%;
  padding: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.house-item-img {
  width: 100rpx;
  height: 100rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.house-item-bd {
  margin-left: 30rpx;
  flex: 1;
}
.house-item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #101010;
}
.house-item-num {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.house-item-num-label {
  font-size: 24rpx;
  color: #000;
}
.house-item-num-bd {
  font-size: 24rpx;
  color: #EC0D0D;
}