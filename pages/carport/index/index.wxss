.index {
  min-height: 100vh;
  background: #f5f5f5;
}
.index-header {
  height: 100rpx;
  width: 100%;
  padding: 0 50rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #efefef;
  background-color: #EC0D0D;
}
.index-header-search {
  width: 100%;
  height: 60rpx;
  border-radius: 30rpx;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.search-address {
  padding-right: 20rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.search-address .van-dropdown-menu {
  height: 60rpx !important;
  box-shadow: none !important;
  font-size: 24rpx !important;
  color: #333 !important;
}
.search-address .van-dropdown-item--down {
  top: 53.5px !important;
}
.city-item {
  text-align: left;
  color: #333;
}
.icon-triangle {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #333;
}
.search-input {
  flex: 1;
  font-size: 24rpx;
}
.index-dropdown {
  width: 100%;
}
.index-dropdown .van-dropdown-menu__item {
  justify-content: space-between;
}
.index-houses {
  padding-top: 20rpx;
}
.house-item {
  width: 100%;
  padding: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.house-item-img {
  width: 100rpx;
  height: 100rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.house-item-bd {
  margin-left: 30rpx;
  flex: 1;
}
.house-item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #101010;
  overflow: hidden;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 550rpx;
}
.house-item-num {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.house-item-num-label {
  font-size: 24rpx;
  color: #000;
}
.house-item-num-bd {
  font-size: 24rpx;
  color: #EC0D0D;
}
.item-empty {
  width: 100%;
  height: 100%;
  padding-top: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.item-empty-icon {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #FFF0E6;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-empty-icon .icon-car {
  color: #FF8452;
  font-size: 100rpx;
}
.item-empty-info {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #474747;
}