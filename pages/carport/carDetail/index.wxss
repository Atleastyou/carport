.detail {
  width: 100%;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 8rpx 0 100rpx;
}
.detail-header {
  width: 100%;
  height: 110rpx;
  padding: 0 30rpx;
  background: #D93025;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  display: flex;
  align-items: center;
}
.detail-container {
  padding: 20rpx;
  height: calc(100vh - 220rpx);
}
.detail-body {
  width: 100%;
  height: 100%;
  padding: 10rpx 40rpx;
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.12);
}
.detail-body-title {
  font-size: 28rpx;
  color: #101010;
}
.car-detail {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}
.car-floor {
  width: 170rpx;
  height: 170rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.car-detail-bd {
  margin-left: 20rpx;
}
.car-detail-name {
  font-size: 32rpx;
  color: #101010;
  font-weight: bold;
}
.car-detail-address {
  margin-top: 14rpx;
  color: #28rpx;
  color: #101010;
}
.car-price {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.car-price-label {
  font-size: 24rpx;
  color: #BF1A21;
}
.car-price-value {
  color: #E51C23;
  font-size: 24rpx;
}
.car-price-value.red {
  font-size: 36rpx;
}
.car-info {
  margin-top: 50rpx;
  display: flex;
  align-items: center;
}
.car-info-col {
  flex: 1;
  padding-left: 20rpx;
}
.car-info-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}
.car-row-label {
  min-width: 130rpx;
  color: #A5A3A3;
}
.car-row-value {
  color: #141414;
}
.detail-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.footer-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}
.detail-mobile {
  width: 400rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F2BD3B;
  font-size: 28rpx;
  color: #fff;
  border-radius: 0;
}
.detail-mobile:after {
  border-radius: 0;
  border: none;
}
.detail-pay {
  width: 240rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F6390D;
  font-size: 28rpx;
  color: #fff;
  border-radius: 0;
}
.detail-pay:after {
  border-radius: 0;
  border: none;
}