.detail {
  width: 100%;
  min-height: 100vh;
  padding-bottom: 200rpx;
  background-color: #f5f5f5;
}
.detail-swiper {
  width: 100%;
  position: relative;
}
.detail-swiper-container {
  height: 600rpx;
}
.swiper-banner {
  width: 100%;
  height: 100%;
  background: #000;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.index-content {
  margin-top: 50rpx;
}
.indicator {
  position: absolute;
  right: 20rpx;
  bottom: 60rpx;
  padding: 4rpx 20rpx;
  border-radius: 40rpx;
  background: #909090;
  color: #FBFBFB;
  font-size: 24rpx;
}
.detail-container {
  margin-top: -40rpx;
  position: relative;
}
.detail-container-header {
  width: 100%;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 40rpx 40rpx 0 0;
}
.detail-header-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.detail-name {
  font-size: 36rpx;
  color: #101010;
  font-weight: bold;
  max-width: ;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: keep-all;
}
.detail-header-ft {
  display: flex;
  align-items: center;
}
.detail-tag {
  width: 130rpx;
  height: 40rpx;
  margin-left: 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #EC0D0D;
  color: #fff;
  font-size: 24rpx;
}
.detail-header-nums {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.num-item {
  text-align: center;
  flex: 1;
}
.num-item.border {
  border-right: 1px solid #BBBBBB;
}
.detail-price-bd {
  padding-bottom: 20rpx;
  background: #fff;
}
.detail-price {
  padding: 40rpx 20rpx;
  background: #EC0D0D;
  display: flex;
  align-items: center;
}
.detail-price-label {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}
.detail-price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  font-style: italic;
}
.detail-info {
  margin-top: 10rpx;
  padding: 20rpx;
  background: #fff;
}
.detail-info-title {
  position: relative;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #101010;
}
.detail-info-title:after, .detail-info-title:before {
  position: absolute;
  content: '';
  width: 120rpx;
  top: 50%;
  left: 50;
  transform: translate(-50%, -50%);
  border: 1px dashed #bbb;
}
.detail-info-title:before {
  transform: translateX(-130%);
}
.detail-info-title:after {
  transform: translateX(30%);
}
.detail-info-bd {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
}
.detail-info-col {
  flex: 1;
  padding-left: 54rpx;
}
.detail-info-col:first-child {
  padding-left: 34rpx;
}
.detail-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.detail-info-row-label {
  font-size: 24rpx;
  color: #A5A3A3;
  min-width: 130rpx;
}
.detail-info-row-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #141414;
  flex: 1;
}
.detail-info-more {
  padding-left: 34rpx;
}
.detail-info-row-value text {
  flex: 1;
}
.detail-info-row-value .icon-position {
  color: #29C0C0;
  font-size: 38rpx;
}
.detail-floor {
  padding-top: 42rpx;
  background: #fff;
}
.detail-floor-list {
  margin-top: 46rpx;
  background: #FED8D9;
  padding: 50rpx 20rpx;
}
.detail-floor-bd {
  display: flex;
  align-items: center;
}
.floor-item {
  width: 340rpx;
  min-width: 340rpx;
  margin-right: 40rpx;
  height: 280rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.detail-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 40rpx 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer-btn {
  width: 400rpx;
  height: 80rpx;
  border-radius: 80rpx;
  background: #F6390D;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}