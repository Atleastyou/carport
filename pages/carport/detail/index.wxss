.detail-swiper {
  width: 100%;
  position: relative;
  z-index: -1;
}
.detail-swiper-container {
  height: 600rpx;
}
.swiper-banner {
  width: 100%;
  height: 100%;
  background: #000;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.index-content {
  margin-top: 50rpx;
}
.indicator {
  position: absolute;
  right: 20rpx;
  bottom: 60rpx;
  padding: 4rpx 20rpx;
  border-radius: 40rpx;
  background: #909090;
  color: #FBFBFB;
  font-size: 24rpx;
}
.detail-container {
  margin-top: -40rpx;
}
.detail-container-header {
  width: 100%;
  height: 600rpx;
  background-color: #fff;
  border-radius: 40rpx;
  margin-top: -40rpx;
}