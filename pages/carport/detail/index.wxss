.detail {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
}
.detail-swiper {
  width: 100%;
  position: relative;
}
.detail-swiper-container {
  height: 600rpx;
}
.swiper-banner {
  width: 100%;
  height: 100%;
  background: #000;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
.index-content {
  margin-top: 50rpx;
}
.indicator {
  position: absolute;
  right: 20rpx;
  bottom: 60rpx;
  padding: 4rpx 20rpx;
  border-radius: 40rpx;
  background: #909090;
  color: #FBFBFB;
  font-size: 24rpx;
}
.detail-container {
  margin-top: -40rpx;
  position: relative;
}
.detail-container-header {
  width: 100%;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 40rpx 40rpx 0 0;
}
.detail-header-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.detail-name {
  font-size: 36rpx;
  color: #101010;
  font-weight: bold;
  max-width: ;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: keep-all;
}
.detail-header-ft {
  display: flex;
  align-items: center;
}
.detail-tag {
  width: 130rpx;
  height: 40rpx;
  margin-left: 30rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #EC0D0D;
  color: #fff;
  font-size: 24rpx;
}
.detail-header-nums {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.num-item {
  text-align: center;
  flex: 1;
}
.num-item.border {
  border-right: 1px solid #BBBBBB;
}
.detail-price {
  padding: 40rpx 20rpx;
  background: #EC0D0D;
  display: flex;
  align-items: center;
}
.detail-price-label {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}
.detail-price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}